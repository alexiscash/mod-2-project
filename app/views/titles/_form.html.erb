<!DOCTYPE html>
<html>
    <head>
        <style>
            * {
                background: gray;
                font-family: arial, sans-serif;
                color: white;
            }
        </style>
    </head>
    <body>
        <% if flash[:errors] %>
            <% flash[:errors].each do |err| %>
                <li><%= err %></li>
            <% end %>
        <% end %>

        <%= form_for @title do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <br><br>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <br><br>
        <%= f.label :quote %>
        <%= f.text_field :quote %>
        <br><br>
        <%= f.label :character %>
        <%= f.text_field :character %>
        <br><br>
        <%= f.collection_select :writer_id, @writers, :id, :name %>
        <br><br>
        <%= f.submit %>
        <% end %>
    </body>
</html>