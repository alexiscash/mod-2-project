<!DOCTYPE html>
<html>
    <head>
        <style>
            * {
                background: gray;
                font-family: arial, sans-serif;
                color: white;
            }
        </style>
    </head>
    <body>
        <% if flash[:errors] %>
            <% flash[:errors].each do |err| %>
                <li><%= err %></li>
            <% end %>
        <% end %>

        <%= form_for @user do |f| %>
        <%= f.label :user_name %>
        <%= f.text_field :user_name %>
        <%= f.label :password %>
        <%= f.text_field :password %>
        <%= f.submit %>
        <% end %>
    </body>
</html>